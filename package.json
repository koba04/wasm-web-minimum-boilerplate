{
  "name": "wasm-web-minimum-boilerplate",
  "version": "1.0.0",
  "description": "A minimal boilerplate for WASM on the web",
  "main": "public/index.js",
  "scripts": {
    "build": "cargo build --target wasm32-unknown-unknown",
    "postbuild": "wasm-bindgen target/wasm32-unknown-unknown/debug/hello.wasm --out-dir ./public/wasm --target web",
    "clean": "rm -rf public/wasm target",
    "prestart": "npm run build",
    "start": "http-server",
    "test": "cargo test"
  },
  "keywords": ["wasm"],
  "author": "koba04",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^14.1.1"
  }
}
